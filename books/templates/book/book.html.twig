{% extends "base.html.twig" %}

{% block title %}
    {{ book.name }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ book.name }}</h1>
        <h6 class="text-muted">Pages: {{ book.pages == null ? "-" : book.pages }}</h6>
        <hr>
        <span>{{ book.description }}</span>
        <a class="btn btn-success form-control mt-4"href="{{ path('home') }}" >Back</a>
    </div>
{% endblock %}